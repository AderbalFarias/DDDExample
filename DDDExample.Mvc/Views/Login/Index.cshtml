@model DDDExample.Mvc.Models.LoginModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<article class="page-login">
    <div class="profile-img img-responsive"></div>
    <hr>
    @using (Html.BeginForm("LogIn", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.LabelFor(model => model.Login, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type your user", @required = "required" } })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type your password", @required = "required" } })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(model => model.RememberMe) Remember me
                    </label>
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <div class="">
                    @Html.ActionLink("Did you forget your password?", "RecoverPassword", "Login")
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <button type="submit" class="btn btn-default btn-specific">Enter</button>
            </div>
        </div>
    }
</article>